{
	"name": "markdown-goplay",
	"displayName": "markdown-goplay",
	"description": "it runs go source in markdown and writes output.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:markdown-goplay.execute-cursor"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "markdown-goplay.execute-cursor",
				"title": "markdown-goplay: go run code block at cursor"
			}
		],
		"configuration": {
			"title": "Markdonw Goplay",
			"properties": {
				"markdownGoplay.workdir": {
					"type": "string",
					"default": "",
					"description": "Workdir for go run. When null, it uses a dir of the current file."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"ts-loader": "^9.2.5",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0",
		"@vscode/test-electron": "^1.6.2"
	}
}
